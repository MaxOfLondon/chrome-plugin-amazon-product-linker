{
    "name": "Amazon Product Linker",
    "version": "0.1",
    "description": "Creates no-login-required link to currently viewed Amazon product and sends it to the clipboard. It keeps history of the links.",
    "permissions": ["notifications", "scripting", "clipboardWrite", "activeTab", "storage"],
    "manifest_version": 3,
    "author": "maxoflondon",
    "background": {
        "service_worker": "js/background.js"
    },
    "action": {
    },
    "options_page": "options.html",
    "icons": {
        "16": "images/img16.png",
        "32": "images/img32.png",
        "48": "images/img48.png",
        "128": "images/img128.png"
    }
}