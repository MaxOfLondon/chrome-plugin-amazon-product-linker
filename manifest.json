{
    "name": "Amazon product link creator",
    "default_locale": "en",
    "version": "0.1",
    "description": "Creates anonymous url link to currently viewed Amazon product and stores it in the clipboard",
    "permissions": ["notifications", "scripting", "clipboardWrite", "activeTab"],
    "manifest_version": 3,
    "author": "maxoflondon",
    "background": {
        "service_worker": "js/background.js"
    },
    "action": {
    },
    "options_page": "options.html",
    "icons": {
        "16": "images/img16.png",
        "32": "images/img32.png",
        "48": "images/img48.png",
        "128": "images/img128.png"
    }
}